
@using WebSiteBanHang.Models

<div class="container">
    <div class="row align-items-center">
        <div class="col-lg-2 col-6">
            <a href="/" class="brand-wrap">
                <img class="logo" src="~/Content/images/shopping-online.jpg" style="width:50px; height:50px">
            </a> <!-- brand-wrap.// -->
        </div>
        <div class="col-lg-6 col-12 col-sm-12">

            @*Tạo Form tìm kiếm*@
            @using (Html.BeginForm("LayTuKhoaTimKiem", "TimKiem"))
            {
                @*<input type="text" name="sTuKhoa" placeholder="Nhập tên sản phẩm ..." />
                    <input type="submit" value="Tìm kiếm">*@

                <div class="input-group w-100">
                    <input type="text" class="form-control" name="sTuKhoa" placeholder="Nhập tên sản phẩm ...">
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit" value="Tìm kiếm">
                            <i style="z-index:1" class="fa fa-search"></i>
                        </button>
                    </div>
                </div>
            }


        </div> <!-- col.// -->
        <div class="col-lg-4 col-sm-6 col-12">
            <div class="widgets-wrap float-md-right">
                <div class="widget-header  mr-3">
                    <a href="@Url.Action("XemGioHang","GioHang")"
                       class="icon icon-sm rounded-circle border"><i class="fa fa-shopping-cart"></i></a>
                    <span class="badge badge-pill badge-danger notify"> @Html.Action("GioHangPartial", "GioHang")</span>
                </div>
                <div class="widget-header icontext">
                    <a href="#"
                       class="icon icon-sm rounded-circle border"><i class="fa fa-user"></i></a>
                    <div class="text">
                        <span class="text-muted">Welcome!</span>
                        @*Hiện thông tin nếu đăng nhập thành công*@
                        @if (Session["TaiKhoan"] != null)
                        {
                            ThanhVien tv = (ThanhVien)Session["TaiKhoan"];
                            <div>@tv.HoTen</div>
                            @Html.ActionLink("Đăng xuất", "DangXuat", "Home")
                        }
                        else
                        {

                            <div>
                                <a href="#" onclick="document.getElementById('id01').style.display='block'" style="width:auto;">
                                    Sign in
                                </a>
                                <a href="/Home/Dangky">
                                    Register
                                </a>
                            </div>

                        }

                    </div>
                </div>
            </div> <!-- widgets-wrap.// -->
        </div> <!-- col.// -->
    </div> <!-- row.// -->
    <div class="row">
        <div class="col-md-12 modal" id="id01">
            @using (Ajax.BeginForm("DangNhap", "Home", null, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "ThongBao", HttpMethod = "POST" }, new { @class = "modal-content animate" }))
            {

                <div class="imgcontainer">
                    <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">&times;</span>
                    <img src="~/Content/images/iconfinder_user-alt_285645.png" style=" z-index:999" alt="Avatar" class="avatar">
                </div>

                <div class="container">
                    <p style="font-weight:bold;color:red;text-align:left" class="text-danger" id="ThongBao"></p>

                    <label for="uname"><b>Username</b></label>
                    <input type="text" name="Email" placeholder="Enter Username" required>
                    @*@Html.TextBox("Email", null, new { placeholder = "Enter Username", required = true })*@
                    <label for="psw"><b>Password</b></label>
                    <input class="password MatKhau" type="password" placeholder="Enter Password" name="Password" required>
                    @*@Html.TextBox("Password", null, new { placeholder = "Enter Password", required = true, @type = "password" })*@
                    <button type="submit">Login</button>
                    <label>

                        <input type="checkbox" checked="checked" name="remember"> Remember me
                    </label>
                </div>

                <div class="container" style="background-color:#f1f1f1">
                    <button type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn">Cancel</button>
                    <span class="psw">Forgot <a href="#">password?</a></span>
                </div>
            }
        </div>
    </div>
    

      


   
    <script>
        // Get the modal
        var modal = document.getElementById('id01');

        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    </script>
</div> <!-- container.// -->
                                                    @*mneu li*@
<nav class="navbar navbar-main navbar-expand-lg navbar-light border-bottom">
    <div class="container">
       
            <div class="logo">
                <a href="/"><img src="~/Content/images/logo.png" alt=""></a>
            </div>
            @Html.Action("MenuPartial", "Home")

            <div class="clearfix"> </div>
       
    </div>
</nav>
